pipeline{
    agent {
        label 'Non-Prod-Slave'
        }
        tools{
            maven 'maven'
        }
        stages{
            stage('Install Httpd'){
                steps{
                   sh '''sudo yum install httpd -y
                        sudo systemctl enable httpd
                        sudo systemctl start httpd
                        sudo systemctl status httpd
                '''
                }
        }
        stage('copy the webfile'){
            steps{
                sh 'cp index.html /var/www/html'
            }
        }
}
}
